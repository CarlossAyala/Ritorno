<main id="login" class="container-fluid my-5">
    <div class="d-flex justify-content-center">
    <form class="container-data-login my-3" action="/signin" method="POST">
        <h5 class="text-center">ProyectoPet</h2>
        <div class="form-group">
        <label for="username">Email:</label>
        <input type="email" class="form-control" name="username"  placeholder="name@example.com">
        </div>
        <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" class="form-control" name="password"  placeholder="Ingresa tu contraseña">
        </div>
        <button class="btn-login">Iniciar Sesión</button>
        <div class="text-center">
        <p>¿No tienes una cuenta? <a href="/signup"><span>Regístrate</span></a></p>
        </div>
    </form>
    </div>
</main>